#include "PlotCurve.h"

/////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////

//

/////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////////////

CPlotCurve::CPlotCurve()
{
    m_curve = new QwtPlotCurve();
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetPaintAttribute( EPaintAttribute attribute, bool on )
{
    m_curve->setPaintAttribute( QwtPlotCurve::PaintAttribute(attribute), on );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetLegendAttribute( ELegendAttribute attribute, bool on )
{
    m_curve->setLegendAttribute( QwtPlotCurve::LegendAttribute(attribute), on );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetSamples( double *xData, double *yData, int size )
{
    m_curve->setSamples( xData, yData, size );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetCurveAttribute( ECurveAttribute attribute, bool on )
{
    m_curve->setCurveAttribute( QwtPlotCurve::CurveAttribute(attribute), on );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetPen( const QPen &pen )
{
    m_curve->setPen( pen );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetBrush( const QBrush &brush )
{
    m_curve->setBrush( brush );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetBaseLine( double baseline )
{
    m_curve->setBaseline( baseline );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetStyle( ECurveStyle style )
{
    m_curve->setStyle( QwtPlotCurve::CurveStyle(style) );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetSymbol( CSymbol symbol )
{
    m_curve->setSymbol( symbol.ToQwtSymbol() );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::SetTitle(QString string)
{
    m_curve->setTitle( string );
}

/////////////////////////////////////////////////////////////

void CPlotCurve::Attach( IDiagram *diagram )
{
    m_curve->attach( diagram->SetParent() );
}

/////////////////////////////////////////////////////////////

CPlotCurve::~CPlotCurve()
{
    delete [] m_curve;
}
